    function hideModal() {
        $("#nguoiDungModal").modal("hide");
    }

    function showAddModal() {
        $("#nguoiDungForm")[0].reset();
        $("#nguoiDungId").val('');
        $("#nguoiDungModal").modal("show");
    }
</script>
